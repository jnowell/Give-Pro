<h1 class="page-header">Overview</h1>

  <div class="row placeholders">
      <div class="col-xs-6 col-sm-4 placeholder topline">
        <div class="total">
          <h3>Amount Given In <%= Time.now.year %></h3>
          <span class="value"><%= number_to_currency(@annual_sum) %></span>
        </div>
        <div class="total">
            <h3>Amount Tax-Exempt:</h3>
            <span class="value"><%= number_to_currency(@exempt_sum) %></span>
        </div>
        <div class="total">
            <h3>Total Amount Given:</h3>
            <span class="value"><%= number_to_currency(@total_sum) %></span>
        </div>
      </div>
      <div class="col xs-6 col-sm-4 placeholder income">
          <%= render 'shared/_income' %>
      </div>
      <div class="col-xs-6 col-sm-4 placeholder pie" style="display:none">
          <div id="pie_chart"></div>
          <h4>Organization Type</h4>
          <span class="text-muted">Broken Down By Subsection</span>
      </div>
      <% if @total_sum > 0 %>
        <div class="col-xs-6 col-sm-4 placeholder time">
      <% else %>
        <div class="col-xs-6 col-sm-4 placeholder" style="display:none">
      <% end %>
          <svg id="line_chart"></svg>
          <h4>Giving Over Time</h4>
          <span class="text-muted">Broken Down By Month</span>
      </div>
  </div>

  <h1 class="page-header">Recent Giving</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th class="amoun">Amount</th>
        <th class="date">Donation date</th>
        <th class="recur">Recurring</th>
        <th class="match">Matching</th>
        <th class="org">Nonprofit</th>
        <th class="links" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @donations.each do |donation| %>
        <tr>
          <td class="amount"><%= number_to_currency(donation.amount) %></td>
          <td class="date"><%= donation.donation_date %></td>
          <td class="recur"><%= donation.recurring ? "Yes" : "No" %></td>
          <td class="match"><%= donation.matching ? "Yes" : "No" %></td>
          <td class="org"><%= donation.NonProfit.name %></td>
          <% unless preview == true %>
          <td class="link"><%= link_to 'View', donation %></td>
          <td class="link"><%= link_to 'Edit', edit_donation_path(donation) %></td>
          <td class="link"><%= link_to 'Delete', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>