<%= form_for(@processor) do |f| %>
  <% if @processor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@processor.errors.count, "error") %> prohibited this processor from being saved:</h2>

      <ul>
      <% @processor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :domain %><br>
    <%= f.text_field :domain %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <% if f.object.image? %>
      <br/>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %> 
    <% end %>
  </div>
  <div class="field">
    <%= f.label :org_regex %><br>
    <%= f.text_field :org_regex %>
  </div>
  <div class="field">
    <%= f.label :amount_regex %><br>
    <%= f.text_field :amount_regex %>
  </div>
  <div class="field">
    <%= f.check_box :requires_org  %>
    <%= f.label :matching, "This processor requires a link to a non-profit org" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn-submit" %>
  </div>
<% end %>
