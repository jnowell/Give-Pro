<div class="password_reset">
	<div class="container">
		<div class="form">

			<h1>Change Your Password</h1>

			<p id="notice"><%= notice %></p>

			  <%= form_for @user, url: password_reset_path(@user.password_reset_token), html: { method: :path} do |f| %> 
			  	<%= f.label :password %>
			  	<%= f.password_field :password %>
			  	<br/>
			  	<%= f.label :password_confirmation %>
			  	<%= f.password_field :password_confirmation %>
			  	<%= f.submit "Change Password", class: "btn-submit" %>
			  <% end %>
		</div>
	</div>
</div>