

<div class="donations">
  <div class="container">
    <div class="show">

      <p id="notice"><%= notice %></p>

      <% if @donations.empty? %>
        <p class="message">
          You currently don't have any donations. To get started adding donations, either forward donation email receipts to <a href="mailto:charityemailtest@gmail.com">charityemailtest@gmail.com</a> or add them manually via our <%= link_to 'Add Donation Form', :controller => "donations", :action => "new" %>.
        </p>
      <% end %>

      <%= render "shared/dashboard", preview: false %>

      <br>

      <%= link_to 'Enter New Donation', new_donation_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  window.sub_json = <%= raw @sub_hash.to_json %>;
  window.time_json = <%= raw @date_total.to_json %>;
  $('.donation-meter .glass .amount').css('height','<%= number_to_percentage(@goal_percent) %>');
<% end %>

<%= javascript_include_tag "visualizations", "d3.v3.min" %>
