<h1>Editing Donation</h1>

<div class="donation">
	<div class="container">
		<div class="form">
			<%= render 'form', submit_label: 'Update' %>
		</div>
	</div>
</div>

<%= javascript_tag do %>
  	$(function () {
        $('#donation_picker').datetimepicker({
        	format: 'DD/MM/YYYY',
        	maxDate: new Date()
    	});
    });
<% end %>
