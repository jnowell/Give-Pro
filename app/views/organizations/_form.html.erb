<%= form_for(@organization) do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% @organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :type %><br>
    <%= f.select :type, ['NonProfit', 'Processor']%>
  </div>
  <div class="field">
    <%= f.label :ein %><br>
    <%= f.number_field :ein %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :alias %><br>
    <%= f.text_field :alias %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <% if f.object.image? %>
      <br/>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %> 
    <% end %>
  </div>
  <div class="field">
    <%= f.label :exemption_code %><br>
    <%= f.text_field :exemption_code %>
  </div>
  <div class="field">
    <%= f.label :domain_name %><br>
    <%= f.text_field :domain_name %>
  </div>
  <div class="field">
    <%= f.label :homepage %><br>
    <%= f.text_field :homepage %>
  </div>
  <div class="field">
    <%= f.label :ruling_date %><br>
    <%= f.text_field :ruling_date %>
  </div>
  <div class="field">
    <%= f.label :subsection %><br>
    <%= f.text_field :subsection %>
  </div>
  <div class="field">
    <%= f.label :classification %><br>
    <%= f.text_field :classification %>
  </div>
  <div class="field">
    <%= f.label :foundation_code %><br>
    <%= f.text_field :foundation_code %>
  </div>
  <div class="field">
    <%= f.label :donation_page_url %><br>
    <%= f.text_field :donation_page_url %>
  </div>
  <div class="field">
    <%= f.label :check_donation_string %><br>
    <%= f.text_field :check_donation_string %>
  </div>
  <div class="field">
    <%= f.label :org_regex %><br>
    <%= f.text_field :org_regex %>
  </div>
  <%= f.fields_for :amount_regexes, @organization.amount_regexes do |p| %>
    <div class="field">
      <%= p.label :regex %><br>
      <%= p.text_field :regex %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Submit", class: "btn-submit" %>
  </div>
<% end %>
